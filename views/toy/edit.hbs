<form action="/toy/edit/{{ toy._id }}" method="post" style="padding-top: 100px;">
    <div class="container">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 for="name" class="mb-0">Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="name" required value="{{toy.name}}">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 for="origin" class="mb-0">The national</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="_national" required value="{{toy._national}}">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 for="price" class="mb-0">Price</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="price" required value="{{toy.price}}">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 for="description" class="mb-0">Description</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="description" required value="{{toy.description}}">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 for="description" class="mb-0">Category</h6>
                                </div>
                                <select name="category">
                                    {{#each categorys }}
                                    <option value="{{ _id }}"> {{ name }}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 for="image" class="mb-0">Image</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="image" required value="{{toy.image}}">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9 text-secondary">
                                    <input class="btn btn-primary" type="submit" value="Add">
                                    <input class="btn btn-success" type="reset" value="Clear">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
